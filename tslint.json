{
  "extends": ["tslint-config-airbnb", "tslint-react"],
  "rules": {
    "quotemark": [true, "single", "jsx-double"],
    "interface-name": [true, "always-prefix"],
    "import-name": [false],
    "variable-name": {
      "options": [
        "allow-pascal-case"
      ]
    },
    "strict-boolean-expressions": [
      true,
      "allow-null-union",
      "allow-undefined-union"
    ]
  }
}
